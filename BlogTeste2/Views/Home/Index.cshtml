@model IList<BlogTeste2.Models.Post>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{
    <article>
        <p>Não existem resultados para a pesquisa realizada.</p>
    </article>
}

@foreach (var p in Model)
{
    <article>
        <h1>@p.Titulo</h1>
        <p>@p.Resumo</p>
    </article>
}