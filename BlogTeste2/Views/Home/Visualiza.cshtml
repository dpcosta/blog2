@model BlogTeste2.Models.Post
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Visualiza Post</title>
</head>
<body>
    <div> 
        <form action="/Home/EditaPost" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="publicado" value="@Model.Publicado.ToString()" />
            <input type="hidden" name="dataPublicacao" value="@Model.DataPublicacao" />
            <label>
                Título: <input name="titulo" value="@Model.Titulo" maxlength="20" required />
            </label>
            @Html.ValidationMessage("titulo")
            <label>
                Resumo: <input name="resumo" value="@Model.Resumo" required />
            </label>
            @Html.ValidationMessage("resumo")
            <label>
                Categoria: <input name="categoria" value="@Model.Categoria" />
            </label>
            @Html.ValidationMessage("categoria")
            <button type="submit">Cadastrar</button>
        </form>
    </div>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script>
	    $("form").validate();
    </script>
</body>
</html>
